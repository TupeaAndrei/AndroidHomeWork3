<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_blue"
    android:padding="@dimen/default_padding">


    <TextView
        android:id="@+id/book_title_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="title"
        android:textSize="@dimen/full_title_size"
        android:lines="2"
        android:maxLines="3"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/book_author_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/book_title_full"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Author"
        android:textSize="@dimen/full_author_size"
        android:maxLines="3"
        android:lines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/book_description_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/book_author_full"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description"
        android:textSize="@dimen/full_description_size"
        android:lines="5"
        android:maxLines="100"
        android:ellipsize="end"
        />

</androidx.constraintlayout.widget.ConstraintLayout>